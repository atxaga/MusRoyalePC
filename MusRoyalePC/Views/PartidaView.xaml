<UserControl x:Class="MusRoyalePC.Views.PartidaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="950" d:DesignWidth="1200">

    <UserControl.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Image">
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PlayerAvatar" TargetType="Ellipse">
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Stroke" Value="#D1B282"/>
            <Setter Property="StrokeThickness" Value="3"/>
            <Setter Property="Fill" Value="#44000000"/>
        </Style>

        <Style x:Key="SpeechBubble" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#C79A58"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="TextElement.FontSize" Value="22"/>
            <Setter Property="TextElement.FontWeight" Value="ExtraBold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="40,15" Background="#E6D5B6" CornerRadius="15" Padding="20,8"
        BorderBrush="#C79A58" BorderThickness="1" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Etxekoak" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <!-- NUEVO: marcador con 2 huecos (grandes + chicas) -->
                <Border Background="#5A3B26" CornerRadius="5" Padding="8,3" MinWidth="70">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="LblPuntosEtxekoakG" Text="0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="." Foreground="White" FontWeight="Bold" Margin="2,0"/>
                        <TextBlock x:Name="LblPuntosEtxekoakC" Text="0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <TextBlock x:Name="LblInfoRonda"
                           Text="DESKARTEAK"
                           FontWeight="Black"
                           FontSize="30"
                           Margin="40,0"
                           VerticalAlignment="Center"
                           TextAlignment="Center"/>

                <!-- NUEVO: marcador con 2 huecos (grandes + chicas) -->
                <Border Background="#5A3B26" CornerRadius="5" Padding="8,3" Margin="0,0,10,0" MinWidth="70">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="LblPuntosKanpokoakG" Text="0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="." Foreground="White" FontWeight="Bold" Margin="2,0"/>
                        <TextBlock x:Name="LblPuntosKanpokoakC" Text="0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="Kanpokoak" FontWeight="Bold" VerticalAlignment="Center"/>

            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="40,5">
            <Border x:Name="Tapete" CornerRadius="50" BorderBrush="#B58F54" BorderThickness="4">
                <Border.Background>
                    <ImageBrush ImageSource="/Assets/Tapete.png" Stretch="UniformToFill"/>
                </Border.Background>

                <Grid>
                    <!-- NUEVO: indicador de turno + cuenta atrÃ¡s -->
                    <Border x:Name="TurnInfoPanel"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0"
                            Padding="28,18"
                            CornerRadius="18"
                            Background="#E6000000"
                            BorderBrush="#FFFFD700"
                            BorderThickness="2"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="TXANDA: " Foreground="#FFFFD700" FontWeight="Black" FontSize="26"/>
                            <TextBlock x:Name="LblTurnoJugador" Text="-" Foreground="#FF00E5FF" FontWeight="ExtraBold" FontSize="26"/>
                            <TextBlock Text="   Â·   " Foreground="#CCFFFFFF" FontSize="24"/>
                            <TextBlock x:Name="LblTurnoTiempo" Text="-" Foreground="White" FontWeight="Bold" FontSize="24"/>
                        </StackPanel>
                    </Border>

                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Border Style="{StaticResource SpeechBubble}" x:Name="BubbleKidea" Visibility="Collapsed" Margin="0,0,0,5">
                            <TextBlock x:Name="TxtMensajeKidea" Text="" Foreground="#3A2C20" TextWrapping="Wrap" TextAlignment="Center"/>
                        </Border>

                        <!-- Avatar front + anillo (clicable) -->
                        <Grid Width="60" Height="60">
                            <Ellipse x:Name="ImgAvatarFront" Style="{StaticResource PlayerAvatar}" MouseLeftButtonUp="PlayerAvatar_Click" Cursor="Hand"/>
                            <Path x:Name="AvatarCountdownRingFront"
                                  Stroke="Gold"
                                  StrokeThickness="6"
                                  Panel.ZIndex="10"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Fill="Transparent"
                                  Visibility="Collapsed"
                                  Data="M 30,5 A 25,25 0 1 1 29.999,5"/>
                        </Grid>

                        <TextBlock x:Name="LblNombreFront" Text="" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        <Border Style="{StaticResource SpeechBubble}" Margin="0,10" Visibility="Collapsed">
                            <TextBlock Text="Tengo juego" FontWeight="Bold" Foreground="#3A2C20"/>
                        </Border>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image Source="/Assets/Cartas/karta.png" Width="45" Style="{StaticResource CardStyle}" Margin="0,0,-20,0"/>
                            <Image Source="/Assets/Cartas/karta.png" Width="45" Style="{StaticResource CardStyle}" Margin="0,0,-20,0"/>
                            <Image Source="/Assets/Cartas/karta.png" Width="45" Style="{StaticResource CardStyle}" Margin="0,0,-20,0"/>
                            <Image Source="/Assets/Cartas/karta.png" Width="45" Style="{StaticResource CardStyle}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="100,0,0,0">
                        <StackPanel VerticalAlignment="Center">
                            <Border x:Name="BubbleAurkari1" Visibility="Collapsed" Style="{StaticResource SpeechBubble}">
                                <TextBlock x:Name="TxtMensajeAurkari1" TextWrapping="Wrap" TextAlignment="Center"/>
                            </Border>

                            <!-- Avatar left + anillo (clicable) -->
                            <Grid Width="60" Height="60">
                                <Ellipse x:Name="ImgAvatarLeft" Style="{StaticResource PlayerAvatar}" MouseLeftButtonUp="PlayerAvatar_Click" Cursor="Hand"/>
                                <Path x:Name="AvatarCountdownRingLeft"
                                      Stroke="Gold"
                                      StrokeThickness="6"
                                      Panel.ZIndex="10"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Fill="Transparent"
                                      Visibility="Collapsed"
                                      Data="M 30,5 A 25,25 0 1 1 29.999,5"/>
                            </Grid>

                            <TextBlock x:Name="LblNombreLeft" Text="" Foreground="White" HorizontalAlignment="Center" Margin="0,6,0,0" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center" Margin="15,0,0,0">
                            <Border Style="{StaticResource SpeechBubble}" Margin="0,0,0,10" Visibility="Collapsed">
                                <TextBlock Text="Envido 2 mÃ¡s!" FontWeight="Bold" Foreground="#3A2C20"/>
                            </Border>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.LayoutTransform>
                                    <RotateTransform Angle="90"/>
                                </StackPanel.LayoutTransform>
                                <Image Source="/Assets/Cartas/karta.png" Width="55" Style="{StaticResource CardStyle}" Margin="0,0,-25,0"/>
                                <Image Source="/Assets/Cartas/karta.png" Width="55" Style="{StaticResource CardStyle}" Margin="0,0,-25,0"/>
                                <Image Source="/Assets/Cartas/karta.png" Width="55" Style="{StaticResource CardStyle}" Margin="0,0,-25,0"/>
                                <Image Source="/Assets/Cartas/karta.png" Width="55" Style="{StaticResource CardStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,100,0">
                        <StackPanel VerticalAlignment="Center" Margin="0,0,15,0">
                            <Border Style="{StaticResource SpeechBubble}" x:Name="BubbleAurkari2"  Margin="0,0,0,10" Visibility="Collapsed">
                                <TextBlock Text="" x:Name="TxtMensajeAurkari2" Foreground="#3A2C20" TextWrapping="Wrap" TextAlignment="Center"/>
                            </Border>
                            <!-- Avatar right + anillo (clicable) -->
                            <Grid Width="60" Height="60">
                                <Ellipse x:Name="ImgAvatarRight" Style="{StaticResource PlayerAvatar}" MouseLeftButtonUp="PlayerAvatar_Click" Cursor="Hand"/>
                                <Path x:Name="AvatarCountdownRingRight"
                                      Stroke="Gold"
                                      StrokeThickness="6"
                                      Panel.ZIndex="10"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Fill="Transparent"
                                      Visibility="Collapsed"
                                      Data="M 30,5 A 25,25 0 1 1 29.999,5"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="LblNombreRight" Text="" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,5" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <!-- NUEVO: Bubble para el propio usuario (igual que los demÃ¡s) -->
                        <Border x:Name="BubbleYo" Style="{StaticResource SpeechBubble}" Margin="0,0,0,10" Visibility="Collapsed">
                            <TextBlock x:Name="TxtMensajeYo" Text="" Foreground="#3A2C20" TextWrapping="Wrap" TextAlignment="Center"/>
                        </Border>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <Image x:Name="ImgCarta1" MouseDown="Carta_MouseDown" Tag="0" Source="/Assets/Cartas/copa1.png" Width="90" Style="{StaticResource CardStyle}" Margin="0,0,-35,0" Cursor="Hand"/>
                            <Image x:Name="ImgCarta2" MouseDown="Carta_MouseDown" Tag="1" Source="/Assets/Cartas/basto12.png" Width="90" Style="{StaticResource CardStyle}" Margin="0,0,-35,0" Cursor="Hand"/>
                            <Image x:Name="ImgCarta3" MouseDown="Carta_MouseDown" Tag="2" Source="/Assets/Cartas/espada12.png" Width="90" Style="{StaticResource CardStyle}" Margin="0,0,-35,0" Cursor="Hand"/>
                            <Image x:Name="ImgCarta4" MouseDown="Carta_MouseDown" Tag="3" Source="/Assets/Cartas/cupa12.png" Width="90" Style="{StaticResource CardStyle}" Cursor="Hand"/>
                        </StackPanel>

                        <!-- Avatar + anillo countdown (clicable) -->
                        <Grid Width="70" Height="70">
                            <Ellipse x:Name="ImgAvatarYo" Style="{StaticResource PlayerAvatar}" Width="65" Height="65" Stroke="#00000000" StrokeThickness="0" MouseLeftButtonUp="PlayerAvatar_Click" Cursor="Hand"/>

                            <!-- Anillo de cuenta atrÃ¡s (actualizado desde code-behind) -->
                            <Path x:Name="AvatarCountdownRing"
                                  Stroke="Gold"
                                  StrokeThickness="6"
                                  Panel.ZIndex="10"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Fill="Transparent"
                                  Visibility="Collapsed"
                                  Data="M 35,5 A 30,30 0 1 1 34.999,5"/>
                        </Grid>

                        <TextBlock x:Name="LblNombreYo" Text="(TÃº)" Foreground="Gold" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!--<Border VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                        <TextBlock Text="Hablan Pares" Foreground="#66FFFFFF" FontSize="24" FontWeight="Light" FontStyle="Italic"/>
                    </Border>-->
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Margin="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button Content="ðŸ’¬" Width="55" Height="55" Margin="0,0,10,0" Background="#D1B282" Style="{StaticResource RoundedButton}"/>
                <Button Content="ðŸ“·" Width="55" Height="55" Background="#D1B282" Style="{StaticResource RoundedButton}"/>
                <Button Content="T" Click="TestResumen_Click" Width="30" Height="30" Margin="10,0,0,0" Opacity="0.5"/>
            </StackPanel>

            <StackPanel x:Name="PanelBotones" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                <Button x:Name="BtnMus" Content="MUS" Visibility="Collapsed" Click="BtnMus_Click" 
                        Style="{StaticResource RoundedButton}" Background="#3498DB" Width="100" Height="50" Margin="5"/>

                <Button x:Name="BtnPaso" Content="PASO" Visibility="Collapsed" Click="BtnPaso_Click" 
                        Style="{StaticResource RoundedButton}" Background="#95A5A6" Width="100" Height="50" Margin="5"/>

                <Button x:Name="BtnQuiero" Content="QUIERO" Visibility="Collapsed" Click="BtnQuiero_Click" 
                        Style="{StaticResource RoundedButton}" Background="#27AE60" Width="100" Height="50" Margin="5"/>

                <Button x:Name="BtnEnvido" Content="ENVIDO (2)" Visibility="Collapsed" Click="BtnApuesta_Click" Tag="2"
                        Style="{StaticResource RoundedButton}" Background="#F1C40F" Foreground="#4E342E" FontWeight="Bold" Width="120" Height="50" Margin="5"/>

                <Button x:Name="BtnMas" Content="âž•" Visibility="Collapsed" Click="BtnMas_Click"
                        Style="{StaticResource RoundedButton}" Background="#D35400" Width="50" Height="50" Margin="5"
                        ToolTip="Ver apuestas altas"/>

                <StackPanel x:Name="PanelApuestasAltas" Orientation="Horizontal" Visibility="Collapsed">
                    <Button x:Name="BtnEnvido5" Content="5" Click="BtnApuesta_Click" Tag="5"
                            Style="{StaticResource RoundedButton}" Background="#E67E22" Width="60" Height="50" Margin="5"/>

                    <Button x:Name="BtnHordago" Content="Ã“RDAGO" Click="BtnApuesta_Click" Tag="ordago"
                            Style="{StaticResource RoundedButton}" Background="#C0392B" FontWeight="Black" Width="120" Height="50" Margin="5"/>
                </StackPanel>

            </StackPanel>
        </Grid>

        <!-- NUEVO: Overlay popup LABURPENA (5s) -->
        <Border x:Name="OverlayLaburpena"
                Visibility="Collapsed"
                Background="#99000000"
                Grid.RowSpan="3"
                Panel.ZIndex="105">

            <Border Background="#2C3E50"
                    CornerRadius="14"
                    Padding="22"
                    MinWidth="520"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    BorderBrush="#F1C40F"
                    BorderThickness="3">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.7"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="LABURPENA"
                               Foreground="#F1C40F"
                               FontSize="24"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="TxtLaburpenaItems"
                               Text=""
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <TextBlock x:Name="TxtLaburpenaTotala"
                               Text=""
                               Foreground="White"
                               FontSize="22"
                               FontWeight="Black"
                               TextAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Border>

        <!-- NUEVO: Overlay END_GAME -->
        <Border x:Name="OverlayEndGame"
                Visibility="Collapsed"
                Background="#CC000000"
                Grid.RowSpan="3"
                Panel.ZIndex="110">

            <Border Background="#2C3E50" CornerRadius="15" Width="520" Height="260"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    BorderBrush="#E74C3C" BorderThickness="3">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.7"/>
                </Border.Effect>

                <StackPanel Margin="25" VerticalAlignment="Center">
                    <TextBlock Text="PARTIDA FINALIZADA" Foreground="#E74C3C" FontSize="22"
                               FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <TextBlock x:Name="TxtEndGameMsg"
                               Text="Un jugador se ha salido."
                               Foreground="White"
                               FontSize="16"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>

                    <Button Content="VOLVER"
                            Click="VolverAlHome_Click"
                            Width="150" Height="42"
                            Background="#3498DB" Foreground="White"
                            Style="{StaticResource RoundedButton}"
                            FontWeight="Bold" Cursor="Hand"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>

        <Border x:Name="OverlayResumen" 
                Visibility="Collapsed"
                Background="#CC000000" 
                Grid.RowSpan="3" 
                Panel.ZIndex="100">

            <Border Background="#2C3E50" CornerRadius="15" Width="450" Height="400" 
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    BorderBrush="#F1C40F" BorderThickness="3">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.7"/>
                </Border.Effect>

                <StackPanel Margin="25">
                    <TextBlock Text="PUNTUACIÃ“N DE LA RONDA" Foreground="#F1C40F" FontSize="22" 
                               FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="1" Text="NOS" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="ELLOS" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>

                        <TextBlock Grid.Row="1" Text="ðŸ”² Grandes" Foreground="#BDC3C7" Margin="0,8"/>
                        <TextBlock x:Name="TxtG_Nos" Grid.Row="1" Grid.Column="1" Text="0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtG_Ellos" Grid.Row="1" Grid.Column="2" Text="0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                        <TextBlock Grid.Row="2" Text="ðŸ”³ Chicas" Foreground="#BDC3C7" Margin="0,8"/>
                        <TextBlock x:Name="TxtC_Nos" Grid.Row="2" Grid.Column="1" Text="0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtC_Ellos" Grid.Row="2" Grid.Column="2" Text="0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                        <TextBlock Grid.Row="3" Text="Pair Pares" Foreground="#BDC3C7" Margin="0,8"/>
                        <TextBlock x:Name="TxtP_Nos" Grid.Row="3" Grid.Column="1" Text="0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtP_Ellos" Grid.Row="3" Grid.Column="2" Text="0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                        <TextBlock Grid.Row="4" Text="ðŸƒ Juego" Foreground="#BDC3C7" Margin="0,8"/>
                        <TextBlock x:Name="TxtJ_Nos" Grid.Row="4" Grid.Column="1" Text="0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtJ_Ellos" Grid.Row="4" Grid.Column="2" Text="0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                        <TextBlock Grid.Row="5" Text="ðŸ“ Punto" Foreground="#BDC3C7" Margin="0,8"/>
                        <TextBlock x:Name="TxtPt_Nos" Grid.Row="5" Grid.Column="1" Text="0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtPt_Ellos" Grid.Row="5" Grid.Column="2" Text="0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>

                    <Separator Margin="0,15" Background="#F1C40F" Opacity="0.5"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="TOTAL RONDA: " Foreground="White" FontSize="18" VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtTotalNos" Text="0" Foreground="#2ECC71" FontSize="22" FontWeight="Bold" Margin="10,0"/>
                        <TextBlock Text="-" Foreground="White" FontSize="22" VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtTotalEllos" Text="0" Foreground="#E74C3C" FontSize="22" FontWeight="Bold" Margin="10,0"/>
                    </StackPanel>

                    <Button Content="VOLVER A JUGAR"
                            Click="VolverAlHome_Click"
                            Width="180" Height="45"
                            Background="#3498DB" Foreground="White"
                            Style="{StaticResource RoundedButton}"
                            FontWeight="Bold" Cursor="Hand"
                            HorizontalAlignment="Center" Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
        </Border>

        <!-- NUEVO: Overlay estadÃ­sticas jugador -->
        <Border x:Name="OverlayPlayerStats"
                Visibility="Collapsed"
                Background="#CC000000"
                Grid.RowSpan="3"
                Panel.ZIndex="120">
            <Border Background="#2C3E50" CornerRadius="15" Width="520" Height="320"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    BorderBrush="#3498DB" BorderThickness="3">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.7"/>
                </Border.Effect>

                <StackPanel Margin="25">
                    <TextBlock Text="JOKALARIA" Foreground="#F1C40F" FontSize="20"
                               FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <TextBlock x:Name="TxtStatsUsername" Text="-" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtStatsEmail" Text="-" Foreground="#BDC3C7" FontSize="14" HorizontalAlignment="Center" Margin="0,3,0,15"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="PARTIDAK" Foreground="#BDC3C7" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtStatsPartidak" Text="0" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="IRABAZIAK" Foreground="#BDC3C7" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtStatsIrabaziak" Text="0" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock x:Name="TxtStatsFriendState" Text="" Foreground="#2ECC71" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="BtnSendFriendRequest"
                                Content="ESKAERA BIDALI"
                                Click="BtnSendFriendRequest_Click"
                                Width="170" Height="42"
                                Background="#27AE60" Foreground="White"
                                Style="{StaticResource RoundedButton}"
                                FontWeight="Bold" Cursor="Hand"
                                Margin="0,0,12,0"/>

                        <Button Content="ITXI"
                                Click="BtnClosePlayerStats_Click"
                                Width="120" Height="42"
                                Background="#95A5A6" Foreground="White"
                                Style="{StaticResource RoundedButton}"
                                FontWeight="Bold" Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

    </Grid>
</UserControl>